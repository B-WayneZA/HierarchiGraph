# HierarchiGraph Production Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hierarchigraph?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Gravatar Configuration
GRAVATAR_DEFAULT=identicon
GRAVATAR_SIZE=200

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# AWS Configuration (optional, for AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# PM2 Configuration
PM2_INSTANCES=max

# Nginx Configuration
NGINX_SERVER_NAME=your-domain.com

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/path/to/your/certificate.pem
SSL_KEY_PATH=/path/to/your/private-key.pem

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/www/hierarchigraph/logs

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30000
