# Server Configuration
PORT=5000
NODE_ENV=development

# AWS Neptune Configuration
# For local Neptune (using Docker):
# NEPTUNE_ENDPOINT=localhost
# NEPTUNE_PORT=8182
# NEPTUNE_SSL=false

# For AWS Neptune (replace with your Neptune endpoint):
NEPTUNE_ENDPOINT=your-neptune-endpoint.cluster-xxxxx.us-east-1.neptune.amazonaws.com
NEPTUNE_PORT=8182
NEPTUNE_SSL=true

# AWS Configuration (required for AWS Neptune)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Gravatar Configuration
GRAVATAR_DEFAULT=identicon
GRAVATAR_SIZE=200
