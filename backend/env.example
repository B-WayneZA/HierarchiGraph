# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/hierarchigraph

# For MongoDB Atlas (replace with your connection string):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hierarchigraph?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Gravatar Configuration
GRAVATAR_DEFAULT=identicon
GRAVATAR_SIZE=200

# Optional: MongoDB Atlas specific settings
# MONGODB_ATLAS_USERNAME=your_atlas_username
# MONGODB_ATLAS_PASSWORD=your_atlas_password
# MONGODB_ATLAS_CLUSTER=your_cluster_name
